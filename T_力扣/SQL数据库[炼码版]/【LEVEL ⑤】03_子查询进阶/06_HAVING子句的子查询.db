

-- 请直接点击右下角“运行测试数据”按钮，查看 SQL 语句运行结果 --
SELECT `name`
FROM `teachers`
WHERE `id` IN (
	SELECT `teacher_id`
	FROM `courses`
	GROUP BY `teacher_id`
	HAVING AVG(`student_count`) > (
		SELECT AVG(`student_count`)
		FROM `courses`
	)
);

-- EXAMPLE 01 --
SELECT *
FORM courses
WHERE student_count > (
  SELECT MAX(student_count)
  FORM courses
      WHERE teacher_id IN (
        SELECT id
        FROM teachers
          WHERE age = (
          SELECT MAX(age)
          FROM teachers
          )
  
  )
)
